# MCP Admin Suite Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Web Store Database Connection
# For MySQL/MariaDB (typical web store setup)
STORE_DB_URL=mysql+pymysql://webstore_user:password@localhost/webstore_db

# Alternative database examples:
# STORE_DB_URL=mysql+pymysql://user:pass@remote-host.com:3306/store_db
# STORE_DB_URL=sqlite:///./data/webstore.db  # For development/testing
# STORE_DB_URL=postgresql://user:pass@localhost/webstore_db

# =============================================================================
# SECURITY CONFIGURATION  
# =============================================================================

# Admin API Key (required for admin operations)
ADMIN_API_KEY=your-secure-admin-key-here-change-this

# JWT Secret Key (for session management)
JWT_SECRET_KEY=your-jwt-secret-key-here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/admin_suite.log

# Enable performance monitoring
ENABLE_MONITORING=true

# Metrics retention days
METRICS_RETENTION_DAYS=30

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================

# Server host and ports
MCP_INSPECTOR_PORT=8001
MONITORING_DASHBOARD_PORT=8002  
STORE_ADMIN_SERVER_PORT=8083
UNIFIED_UI_PORT=8000

# External host (for production deployment)
EXTERNAL_HOST=localhost

# SSL Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=
ENABLE_SSL=false

# =============================================================================
# STORE-SPECIFIC CONFIGURATION
# =============================================================================

# Default currency
DEFAULT_CURRENCY=USD

# Low stock threshold (global default)
LOW_STOCK_THRESHOLD=10

# Order status options (comma-separated)
ORDER_STATUSES=pending,processing,shipped,delivered,cancelled

# Admin notification email
ADMIN_EMAIL=admin@yourstore.com

# Store timezone
STORE_TIMEZONE=UTC

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Email service (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Shipping providers API keys
FEDEX_API_KEY=
UPS_API_KEY=  
USPS_API_KEY=

# Payment processor webhooks
STRIPE_WEBHOOK_SECRET=
PAYPAL_WEBHOOK_ID=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable auto-reload (development only)
AUTO_RELOAD=false

# Sample data generation
GENERATE_SAMPLE_DATA=false

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup directory
BACKUP_DIR=./backups

# Automatic backup enabled
AUTO_BACKUP=true

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Database backup retention days
BACKUP_RETENTION_DAYS=7

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Database connection pool size
DB_POOL_SIZE=10

# Redis connection pool size
REDIS_POOL_SIZE=10

# Cache TTL (seconds)
CACHE_TTL=300

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable specific features
ENABLE_ANALYTICS=true
ENABLE_INVENTORY_ALERTS=true
ENABLE_CUSTOMER_INSIGHTS=true
ENABLE_SALES_REPORTS=true
ENABLE_ORDER_MANAGEMENT=true

# Advanced features
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_AUTOMATED_REORDERING=false