# MCP Admin Suite Environment Configuration - EXAMPLE
# Copy this to .env and update with your actual values

# Database Configuration
DB_HOST=mysql
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_password_hash_here
# Use setup_password.php to generate the password hash

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# WordPress Integration
WP_BASE_URL=https://your-domain.com
WP_ADMIN_URL=https://your-domain.com/wp-admin

# MCP Suite URLs
MCP_BASE_URL=https://your-domain.com/showcase
CONTENT_ANALYZER_URL=https://your-domain.com/showcase/analyzer.php
CONTENT_IMPROVER_URL=https://your-domain.com/showcase/auto_improver.php

# Security Headers
ALLOWED_ORIGINS=your-domain.com,www.your-domain.com

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600

# Logging
LOG_FILE=logs/mcp-admin.log
ERROR_LOG=logs/error.log